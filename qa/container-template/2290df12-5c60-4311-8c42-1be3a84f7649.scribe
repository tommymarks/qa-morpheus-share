    #proxy_set_header Host $host;
    #proxy_set_header Authorization None;
    #proxy_redirect off;
    #proxy_buffering off;
    #client_max_body_size 10m;
    #proxy_send_timeout        84000;
    #proxy_read_timeout        84000;
    #proxy_pass http://upstreamServer;
    #break;
    root   /var/www/html;
    index  index.html index.htm;
  }

